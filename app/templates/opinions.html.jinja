{% extends "layout.html.jinja" %}

{% block middle %}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <canvas id="pie-chart" width="400" height="400"></canvas>
    <script>
    const information = {{ info }}
    function generateCharts() {
    new Chart(document.getElementById("pie-chart"), {
    type: 'pie',
    data: {
      labels: ["Zalety", "Wady"],
      datasets: [{
        label: "Produkt",
        backgroundColor: ["#3e95cd", "#8e5ea2"],
        data: [information.pros_amount,information.cons_amount]
      }]
    },
    options: {
    responsive: false,
    title: {
        display: false,
        text: 'Produkt'
      }
    }
    });
}
    </script>
    <button type="button" onclick="generateCharts()" id="button-data"> Wygeneruj Chart </button>
    </br>
    {{ product }}
