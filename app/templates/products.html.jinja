{% extends "layout.html.jinja" %}

{% block middle %}
<h1>> /products/</h1>
    <ul class="list-group" style="list-style-type:none;">
        {% for product in products %}
            <li class="list-group-item"><a style="text-decoration: none; color: white; font-size: large;" href="{{ url_for('opinions', product_id=product) }}">{{ product }}</a></br>
                <p>Nazwa: {{info[product]["name"]}}</p>
                <p>Liczba opinii: {{info[product]["opinion_amount"]}}</p>
                <p>Liczba zalet: {{info[product]["pros_amount"]}}</p>
                <p>Liczba Wad: {{info[product]["cons_amount"]}}</p>
                <p>Åšrednia ocena: {{info[product]["avg_score"]}}</p>
            </li>
        {% endfor %}
    </ul>
{% endblock middle %}